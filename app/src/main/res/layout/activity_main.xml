<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tornaco.lib.widget.checkableimageview.MainActivity">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/title_home" />

        <tornaco.lib.widget.CheckableImageView
            android:id="@+id/image_view"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_above="@+id/checkableImageButton"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="112dp"
            android:layout_marginStart="112dp"
            android:layout_toEndOf="@+id/checkableImageButton"
            android:layout_toRightOf="@+id/checkableImageButton" />


        <android.support.design.widget.CheckableImageButton
            android:id="@+id/checkableImageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignLeft="@+id/message"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/message"
            android:layout_marginBottom="163dp"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
